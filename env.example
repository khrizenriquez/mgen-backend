# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/donations_db
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=donations_db

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
SQL_ECHO=false

# RabbitMQ Configuration
RABBITMQ_URL=amqp://username:password@localhost:5672/
RABBITMQ_DEFAULT_USER=your_rabbitmq_user
RABBITMQ_DEFAULT_PASS=your_secure_password

# Application Configuration
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-required-no-default
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
SERVICE_NAME=donations-api
VERSION=1.0.0

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# Default User Password (only for development)
DEFAULT_USER_PASSWORD=seminario123

# Email Configuration (Mailjet - for password reset and verification)
MAILJET_API_KEY=your-mailjet-api-key
MAILJET_API_SECRET=your-mailjet-api-secret
FROM_EMAIL=noreply@donacionesgt.org
FROM_NAME=Sistema de Donaciones
FRONTEND_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_LEVEL_NUM=20

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_SECRET_KEY=your-csrf-secret-key

# Local tools (only used with Docker profile "dev")
PGADMIN_DEFAULT_EMAIL=admin@duku.dev
PGADMIN_DEFAULT_PASSWORD=admin