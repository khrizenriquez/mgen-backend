# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/donations_db
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=donations_db
DB_HOST=localhost
DB_PORT=5432

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
SQL_ECHO=false

# RabbitMQ Configuration
RABBITMQ_URL=amqp://username:password@localhost:5672/
RABBITMQ_DEFAULT_USER=your_rabbitmq_user
RABBITMQ_DEFAULT_PASS=your_secure_password

# Application Configuration
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-required-no-default
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
SERVICE_NAME=donations-api
VERSION=1.0.0

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# Default User Password (only for development)
DEFAULT_USER_PASSWORD=seminario123

# Email Configuration (Mailjet - for password reset and verification)
# IMPORTANT: Never commit real credentials to Git!
# Get your API keys from: https://app.mailjet.com/account/apikeys
MAILJET_API_KEY=your-mailjet-api-key-here
MAILJET_API_SECRET=your-mailjet-api-secret-here
FROM_EMAIL=noreply@donacionesgt.org
FROM_NAME=Sistema de Donaciones

# Frontend & API URLs
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000

# Logging Configuration
LOG_LEVEL=INFO
LOG_LEVEL_NUM=20

# Monitoring Configuration
GRAFANA_ADMIN_USER=your_grafana_admin_user
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# Apitally Monitoring (for production monitoring)
APITALLY_CLIENT_ID=your-apitally-client-id-here
APITALLY_ENV=prod  # or "dev" for development

# Prometheus Basic Authentication (Optional - uncomment to enable)
# PROMETHEUS_USERNAME=your_prometheus_user
# PROMETHEUS_PASSWORD=your_secure_prometheus_password

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CSRF_SECRET_KEY=your-csrf-secret-key

# Local tools (only used with Docker profile "dev")
PGADMIN_DEFAULT_EMAIL=admin@duku.dev
PGADMIN_DEFAULT_PASSWORD=admin